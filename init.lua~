                HACK = { icon = "Ôíê ", color = "warning" },
                WARN = { icon = "ÔÅ± ", color = "warning", alt = { "WARNING", "XXX" } },
                PERF = { icon = "Ôê∫ ", alt = { "OPTIM", "PERFORMANCE", "OPTIMIZE" } },
                NOTE = { icon = "Ó©¥ ", color = "hint", alt = { "INFO" } },
                TEST = { icon = "‚è≤ ", color = "test", alt = { "TESTING", "PASSED", "FAILED" } },
