            vim.keymap.set("n", "<leader>n", function()
                require("telescope").extensions.file_browser.file_browser()
            end, { desc = "Telescope: File Explorer (<leader>n)" })
        end
    },

    { "mfussenegger/nvim-dap" },
    { "leoluz/nvim-dap-go" },
