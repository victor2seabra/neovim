    {
        "nvim-tree/nvim-web-devicons",
        config = function()
            local devicons = require('nvim-web-devicons')
            -- Configura√ß√£o para substituir √≠cones e cores padr√£o
            devicons.setup({
                -- NOVO: For√ßa o √≠cone de folder a ser vermelho
                folder_icon = 'Ôêì',
                color_icons = true,
                default_icon = {
                    -- √çcone para arquivos n√£o reconhecidos (mantido em branco/padr√£o)
                    icon = "Óòí",
